                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/admin/keys",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "admin",
                        "keys"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Admin: Generate Key",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "if (jsonData.api_key) {",
                            "    pm.collectionVariables.set(\"api_key\", jsonData.api_key);",
                            "    console.log(\"API Key set to collection variables\");",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "X-Admin-Secret",
                        "value": "{{admin_secret}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "name",
                            "value": "Postman Test Key",
                            "type": "text"
                        },
                        {
                            "key": "description",
                            "value": "Generated via Postman",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "{{base_url}}/admin/keys/generate",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "admin",
                        "keys",
                        "generate"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Inference (Offline)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "voice",
                            "value": "NATF2",
